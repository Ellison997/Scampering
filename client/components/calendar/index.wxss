.date-box {
  font-size: 28rpx;
  color: #404040;
  background-color: #fff;
}

.date-box-hd {
  display: flex;
  padding: 28rpx 24rpx;
  font-size: 28rpx;
}

.date-box-hd text {
  flex: 1;
  text-align: center;
}

.month-hd {
  position: relative;
  padding: 20rpx 0;
  font-size: 28rpx;
  text-align: center;
  background: #333;
  color: #fff;
}

.cur-text {
  position: absolute;
  right: 36rpx;
}

.days {
  display: grid;
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
  grid-template-columns:1fr 1fr 1fr 1fr 1fr 1fr 1fr;

}



.day-row {
  width: 100%;
  padding: 0 24rpx;
  margin-top: 60rpx;
  box-sizing: border-box;
}

.days text {
  box-sizing: border-box;

  text-align: center;
  padding: 8rpx 0;
  margin: 2rpx 20rpx;
}

.disable {
  color: #cfcfcf;
}

.days text.active {
  position: relative;
  background-color: #2a579a;
  color: #fff;
  border-radius: 50%;
}

.days text.cur-day {
  position: relative;
  border-radius: 50%;
  border: 1px solid #2a579a;
}

.action {
  position: relative;
}

.action>image {
  width: 100%;
  height: 60rpx;
}

