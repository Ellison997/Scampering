.timer_main {
  position: relative;
  background-color: #3197ed;
  transition: all 0.5s;
  z-index: 1;
  padding: 44rpx 0;
}
.history{
  position: absolute;
  top: 20rpx;
  right: 40rpx;
  z-index:2;
  color: #fff;

}
.timer_time-wrap {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 330rpx;
  height: 350rpx;
  transition: all 0.3s;
  margin: 0 auto;
}

.timer_progress {
  position: absolute;
  top: 0;
  width: 165rpx;
  height: 350rpx;
  overflow: hidden;
  transition: all 0.3s;
}

.timer_progress_mask {
  position: absolute;
  border: 3px solid #1589eb;
  opacity: 0.5;
  border-radius: 50%;
}

.timer_left {
  left: 0;
}

.timer_right {
  right: 0;
}

.timer_circle {
  position: absolute;
  top: 0;
  width: 330rpx;
  height: 330rpx;
  border: 3px solid transparent;
  border-radius: 50%;
  transition: all 0.3s;
}

.timer_circle--left {
  left: 0;
  border-left: 3px solid #fff;
  border-bottom: 3px solid #fff;
  transform: rotate(45deg);
}

.timer_circle--right {
  right: 0;
  border-right: 3px solid #fff;
  border-bottom: 3px solid #fff;
  transform: rotate(-45deg);
}

.timer_time-right {
}

.timer_time {
  font-size: 40px;
  color: #fff;
  font-weight: lighter;
  transition: font-size 0.3s;
}

.timer_taskName {
  font-size: 34rpx;
  letter-spacing: 5px;
  color: #fff;
}

.timer_done {
  width: 64px;
  height: 64px;
}

.timer_inputname {
  width: 100%;
  text-align: center;
  height: 40px;
  border-bottom: 1px solid #f2f2f2;
  color: #999;
}

.timer_footer {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  padding-top: 40px;
  transition: all 0.3s;
}

.timer .timer_ctrl {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 12px;
  color: #fff;
  width: 80px;
  height: 80px;
  margin: 0 20px;
  border-radius: 50%;
  transition: all 0.7s;
  background-color: #48c23d;
}

/*runing style*/

.timer--runing .timer_main {
  flex: 1;
}

.timer--runing .timer_time {
  font-size: 45px;
}

.timer--runing .timer_time-wrap {
  width: 360rpx;
  height: 500rpx;
}

.timer--runing .timer_progress {
  width: 200rpx;
  height: 370rpx;
  margin: 70rpx 0;
}

.timer--runing .timer_circle {
  width: 350rpx;
  height: 350rpx;
}

.timer--runing .timer_footer {
  flex: 0;
  position: absolute;
  bottom: 0;
  width: 100%;
  z-index: 10;
}

.timer--runing .timer_ctrl {
  background-color: #208dea;
  height: 60rpx;
  margin-bottom: 30px;
  border: 1px solid #fff;
  border-radius: 10rpx;
  width: 200rpx;
}
