/* pages/publish/publish.wxss */
page {
  box-sizing: border-box;
  color: #404040;
}

.navbar_item {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  color: #4c4a4a;
  padding-top: 8px;
  text-align: center;
  font-size: 12pt;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

.bar_item_on {
  color: #2a579a;
}

.bar_item_on>text:nth-child(2) {
  display: block;
  width: 100rpx;
  height: 7rpx;
  background: #2a579a;
  margin: 0 auto;
  position: relative;
  bottom: 0;
  border-radius: 8rpx;
  margin-top: 8rpx;
}

.weui-navbar {
  position: relative;
  background: #fff;
  border: 1px solid #ddd;
  box-shadow:1px 1px 3px #888888;
}

/* 提醒列表开始 */

.todo-item:last-child {
  margin-bottom: 120rpx;
}

.todo-item {
  margin: 10rpx;
  padding: 12rpx;
  border-bottom: 1px solid #ddd;
}

.t-head{
  font-weight: bold;
}

.float-right{
  float: right
}

.c-blue{
  color: blue;
}
.c-yellow{
  color: #FC840B;
}



.t-details {
  color: #888888;
}




/* 花卉列表结束 */

.addBtn {
  position: fixed;
  bottom: 60rpx;
  right: 40rpx;
}

.addBtn>view {
  background: #05af22;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  color: #fff;
  font-size: 36pt;
  line-height: 66rpx;
  text-align: center;
  box-shadow: 6rpx 6rpx 4rpx #aaaaaae8;
}
